.page-header
  = link_to new_listing_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Listing
  %h1 Listing listings

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Seller
        %th Address
        %th Description
        %th Price
        %th Sq ft
        %th Bedrooms
        %th Bathrooms
        %th Agent
        %th Pictures
        %th{colspan: 3}

    %tbody
      - @listings.each do |listing|
        %tr
          %td= listing.seller
          %td= listing.address
          %td= listing.description
          %td= listing.price
          %td= listing.sq_ft
          %td= listing.bedrooms
          %td= listing.bathrooms
          %td= listing.agent
          %td= listing.pictures
          %td
            = link_to listing do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_listing_path(listing) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to listing, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
