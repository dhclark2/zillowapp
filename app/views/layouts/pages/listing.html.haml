	%body
		%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
			.container
				.navbar-header
					%button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#navbar"}, aria: {expanded: "false", controls: "navbar"} }
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
          = link_to "#", class: "navbar-brand" do
            = image_tag("home_hunting.jpg", size: "60x30")
				#navbar.collapse.navbar-collapse
					%ul.nav.navbar-nav
						%li.active
							= link_to "Home", root_path
						%li
							= link_to "Listings", pages_listings_path
						%li
							= link_to "Agents", pages_agents_path
            %li
              = link_to "About", pages_about_path
            %li
              = link_to "Help", pages_help_path
          -# %ul.nav.navbar-nav.navbar-right
          -#   - if user_signed_in?
          -#     %li
          -#       %p.navbar-text
          -#         = user.email
          -#   %li
