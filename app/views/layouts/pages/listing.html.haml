          -#     - else
          -#       = link_to "LogIn", new_user_session_path

		.container
			.row
				.col-lg-12
					%h1.page-header
						= user.address
			.row
				.col-md-8
					%img.img-responsive{:alt => "Image_1", :src => "http://placehold.it/750x500"}/
				.col-md-4
					%h3 Description
					  %p
              = user.description
          %h3 Need To Know
            %p Price:
              = user.price
            -# %p Seller:
            -#   = user.user
            -# %p Selling Agent
            -#   = ??
					%h3 Property Features
  					%ul
  						%li Square Feet:
                = user.sq_ft
  						%li Bathrooms:
                = user.bathrooms
  						%li Bedrooms:
                = user.bedrooms

			.row
				.col-lg-12
					%h3.page-header More Pictures
				.col-sm-3.col-xs-6
						%img.img-responsive.portfolio-item{:alt => "Image_2", :src => "http://placehold.it/500x300"}/
				.col-sm-3.col-xs-6
						%img.img-responsive.portfolio-item{:alt => "Image_3", :src => "http://placehold.it/500x300"}/
				.col-sm-3.col-xs-6
						%img.img-responsive.portfolio-item{:alt => "Image_4", :src => "http://placehold.it/500x300"}/
				.col-sm-3.col-xs-6
						%img.img-responsive.portfolio-item{:alt => "Image_5", :src => "http://placehold.it/500x300"}/
			/ /.row
			%hr/
